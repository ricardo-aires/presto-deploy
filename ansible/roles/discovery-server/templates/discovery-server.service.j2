[Unit]
Description=Discovery Server
Documentation=http://prestodb.io
Requires=network.target
After=network.target

[Service]
User={{ discovery_server_user.username }}
Type=forking
ExecStart={{ discovery_server_home_dir }}/bin/launcher start
ExecStop={{ discovery_server_home_dir }}/bin/launcher stop
WorkingDirectory={{ discovery_server_home_dir }}/bin/
Restart=always

[Install]
WantedBy=default.target